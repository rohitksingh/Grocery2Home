<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/openGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Gallery"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/uploadProductImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/common_google_signin_btn_icon_dark"
        />
    <EditText
        android:id="@+id/uploadProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uploadProductImage"
        android:hint="Write ProductName"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_below="@id/uploadProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
    <EditText
        android:id="@+id/originalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="OriginalPrice"
        />
    <EditText
        android:id="@+id/currentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CurrentPrice"
        />

    </LinearLayout>

</RelativeLayout>